<local:MovableControl x:Class="Spline.SupportingPoint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spline"
             x:Name="This"
             Canvas.Left="{Binding ElementName=This, Path=LeftOffset, Mode=TwoWay}"
             Canvas.Top="{Binding ElementName=This, Path=TopOffset, Mode=TwoWay}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Ellipse x:Name="Ellipse" Fill="Black" Width="6" Height="6">
    </Ellipse>
</local:MovableControl>
